<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Usuarios</title>
</head>

<body>
  <a href="/usuarios/add" class="btn btn-success btn-block">Create One!</a>
  <div class="col">

    {{#each usuarios}}
    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title d-flex justify-content-between align-items-center">
            {{ title }} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
          </h4>
          <p>{{ nombre }} </p>
          <p>{{ correo }} </p>
          <p>{{ password }} </p>

          <!-- DELETE REQUEST -->
          <form action="/usuarios/delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
          </form>
        </div>
      </div>
    </div>
    {{else}}
    <div class="card mx-auto">
      <div class="card-body">
        <h1>Hello {{user.name}}</h1>
        <p clsss="lead">There are not Notes yet.</p>
        <a href="/usuarios/add" class="btn btn-success btn-block">Create One!</a>
      </div>
    </div>
    {{/each}}
  </div>

</body>

</html>